<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Signup_Activity">




        <ImageView
            android:id="@+id/backSignup"
            android:layout_gravity="center"

            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />






<ScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_below="@id/backSignup"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/backSignup1"
            android:layout_marginTop="15dp"

            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/backSignup"
            android:layout_height="100dp"
            android:src="@drawable/statusreport"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Personal Information"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1.3"
                android:padding="10dp"
                android:background="@drawable/buttonn"
                android:hint="Username"
                android:maxLength="50"
                android:layout_width="match_parent"
                android:id="@+id/username"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textPersonName"/>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@color/colorGrey"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:padding="10dp"
                android:background="@drawable/buttonn"
                android:hint="Fullname"
                android:layout_width="match_parent"
                android:id="@+id/fullname"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textPersonName"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="1dp"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:background="@color/colorGrey"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="User"
                    android:onClick="userClick"
                    android:id="@+id/radioUser"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content">

                </RadioButton>

                <RadioButton
                    android:id="@+id/radioAgent"
                    android:layout_width="wrap_content"
                    android:text="Agent"
                    android:onClick="agentClick"
                    android:layout_height="wrap_content">

                </RadioButton>

            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="1dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/agentListPane"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <Spinner
                android:padding="10dp"
                android:background="@drawable/buttonn"
                android:hint="Department"
                android:layout_width="match_parent"
                android:id="@+id/department"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textEmailAddress"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="1dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="1.3"
                    android:padding="10dp"
                    android:background="@drawable/buttonn"
                    android:hint="Username"
                    android:maxLength="50"
                    android:layout_width="match_parent"
                    android:id="@+id/code"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:inputType="textPersonName"/>



            </LinearLayout>


        </LinearLayout>






        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="Login Information"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:padding="10dp"
                android:background="@drawable/buttonn"
                android:hint="Email"
                android:layout_width="match_parent"
                android:id="@+id/email1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textEmailAddress"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorGrey"
                android:layout_height="1dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <EditText
                android:padding="10dp"
                android:background="@drawable/buttonn"
                android:hint="Password"
                android:layout_width="match_parent"
                android:id="@+id/password"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textPassword"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/colorGrey"
                android:layout_height="1dp"/>
        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:text="Read Our Terms and Condition"
            android:onClick="read"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack" />




        <Button
            android:layout_gravity="center"
            android:id="@+id/login"
            android:onClick="onClicku"
            android:text="Sign Up"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button2"
            android:fontFamily="@font/nunito_bold"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:src="@drawable/login"/>



            <TextView

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Already have an account?   Login"
                android:id="@+id/signupButton"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack" />







    </LinearLayout>


</ScrollView>


</RelativeLayout>